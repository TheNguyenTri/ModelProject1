<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ThongkeActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarthongke"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginLeft="-5dp"
        android:background="@color/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:onClick="outthongke"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="Statistical"
                android:textColor="#fff"
                android:textSize="22dp" />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/imgAnhto"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="84dp"
        android:src="@drawable/fax" />

    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnnav"
        android:background="#009688"
        app:itemIconTint="#fff"
        app:itemTextColor="#FFF"
        app:menu="@menu/menu_navi"></android.support.design.widget.BottomNavigationView>

    <ListView
        android:id="@+id/lvthongke"
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/imgAnhto"></ListView>
</RelativeLayout>